---
import HTML from '../layouts/html.astro';
import Layout from '../layouts/layout.astro';
import Charsheet from '../layouts/charsheet.astro';
import '../styles/biomon.css';
---

<HTML title="IMI GLOBAL â€” Biomonitor" bodyClass="charsheet-page biomon-page">
  <Layout>
    <Charsheet>
      <div class="fixed-bar">
        <div class="wound-bar">
          <div class="wound-bar-header">
            <span class="wound-bar-title">Wounds <button class="help-trigger" id="wound-help" type="button" aria-label="Wound tracker help">?</button></span>
            <div class="wound-bar-controls">
              <button class="btn-ghost" id="stun-toggle">Stun</button>
              <div class="stabilized-control">
                <div class="wound-box" id="stabilized-toggle"></div>
                <span class="stabilized-label" id="stabilized-label">Stable</span>
              </div>
            </div>
          </div>
          <div id="wound-tracker"></div>
        </div>
        <div class="secondary-bar flex-between">
          <div class="body-info" id="body-info">
            <div class="body-stat">
              <span class="body-label">BT</span>
              <span class="body-stat-value">8</span>
            </div>
            <div class="body-stat body-type">
              <span class="body-type-name">Average</span>
            </div>
            <div class="body-stat">
              <span class="body-label">Carry/Lift</span>
              <span class="carry-value">80/320kg</span>
            </div>
            <div class="body-stat">
              <span class="body-label">BTM</span>
              <span class="btm-value">2</span>
            </div>
            <div class="body-stat body-save">
              <span class="body-label">Save</span>
              <span class="save-value">8</span>
              <span class="save-penalty"></span>
            </div>
          </div>
          <div class="secondary-placeholder">
            <!-- Future content -->
          </div>
        </div>
      </div>
      <div class="container">
        <div class="panel" id="stats-panel"></div>
      </div>
    </Charsheet>
  </Layout>
  <script src="../scripts/biomon/render/index.ts"></script>
</HTML>

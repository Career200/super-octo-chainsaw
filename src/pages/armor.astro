---
import HTML from '../layouts/html.astro';
import Layout from '../layouts/layout.astro';
import Charsheet from '../layouts/charsheet.astro';
import { BodyPartGrid } from '../components/armor/body/BodyPartGrid';
import { DamageHistoryPanel } from '../components/armor/DamageHistoryPanel';
import { InventoryPanel } from '../components/armor/InventoryPanel';
import { ShopPanel } from '../components/armor/ShopPanel';
import '../styles/armor/index.css';
---

<HTML title="IMI GLOBAL â€” TAC HOME" bodyClass="charsheet-page armor-page">
  <Layout>
    <Charsheet>
    <div class="container">
      <DamageHistoryPanel client:only="preact" />

      <!-- BODY ARMOR STATUS -->
      <div class="panel panel-collapsible expanded" id="character-armor-panel">
        <div class="panel-heading">
          <h2>Character Armor <button class="help-trigger" id="armor-help" type="button" aria-label="Armor mechanics help">?</button></h2>
          <button class="btn-outline-danger btn-md" id="btn-im-hit">I'm hit</button>
        </div>
        <BodyPartGrid client:only="preact" />
        <div class="expand-indicator"></div>
      </div>

      <InventoryPanel client:only="preact" />

      <ShopPanel client:only="preact" />

    </div>
    </Charsheet>
  </Layout>
  <script src="../scripts/armor/render/index.ts"></script>
</HTML>

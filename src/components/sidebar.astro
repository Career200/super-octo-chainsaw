---
const { id, buttonText, buttonClass } = Astro.props;
---

<style>
  html {
    scrollbar-gutter: stable; /* prevent layout shift */
  }
  body:has(dialog[open]) {
    overflow: hidden;
  }
  dialog {
    position: fixed;
    inset: auto;
    right: 0;
    width: 220px;
    height: 100vh;

    background-color: var(--bg-alt);
    transition: transform 0.3s ease;
    padding-top: 4rem;
    z-index: 999;

    border: none;
    overflow: hidden;

    /* border animation */
    &::before {
      content: '';
      position: absolute;
      right: 0%;
      top: -50%;
      width: 100%;
      height: 100%;
      z-index: 997;
      pointer-events: none;
      background-color: var(--link);
      animation: run 3s infinite ease-in-out;
    }
    &::after {
      content: '';
      position: absolute;
      inset: 0;
      margin-left: 2px;
      background: var(--bg-alt);
      z-index: 998;
      pointer-events: none;
    }

    &::backdrop {
      background: var(--bg-card);
    }
    > div {
      position: relative;
      z-index: 999;
    }
  }

  @keyframes run {
    0%,
    100% {
      transform: translateY(145%);
    }
    50% {
      transform: translateY(-50%);
    }
  }
</style>

<button onclick={`window.${id}.showModal()`} class={buttonClass}
  >{buttonText}</button
>

<dialog id={id} onclick={`window.${id}.close()`}>
  <div>
    <slot />
  </div>
</dialog>
